#!/usr/bin/env bash
#configures a new Ubuntu machine nginx
apt-get update
apt-get install software-properties-common -y
add-apt-repository ppa:vbernat/haproxy-2.6 -y
apt-get update
apt-get install haproxy=2.6.\* -y
echo "frontend web-front
        bind *:80
        default_backend web-backend

backend web-backend
        balance roundrobin
        server 408045-web-01 54.164.162.231:80 check
        server 408045-web-02 54.87.210.192:80 check
" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo service haproxy start
